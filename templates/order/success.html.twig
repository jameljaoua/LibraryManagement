{% extends 'base.html.twig' %}

{% block title %}Commande confirmée{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 80px;"></i>
                    </div>
                    <h1 class="text-success mb-4">Commande confirmée !</h1>
                    <p class="lead">Merci pour votre achat</p>
                    <p>Votre commande <strong>#{{ order.id }}</strong> a été confirmée avec succès.</p>
                    
                    <div class="alert alert-info mt-4">
                        <strong>Montant total:</strong> {{ order.totalPrice|number_format(2, '.', ' ') }} €
                    </div>

                    <hr class="my-4">

                    <h5 class="mb-3">Détails de la commande</h5>
                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Livre</th>
                                <th>Quantité</th>
                                <th>Prix</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in order.items %}
                                <tr>
                                    <td class="text-start">{{ item.livre.titre }}</td>
                                    <td>{{ item.quantity }}</td>
                                    <td>{{ item.subtotal|number_format(2, '.', ' ') }} €</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                    <div class="mt-4">
                        <a href="{{ path('app_home') }}" class="btn btn-primary btn-lg me-2">
                            <i class="fas fa-home"></i> Retour à l'accueil
                        </a>
                        <a href="{{ path('app_order_history') }}" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-history"></i> Mes commandes
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}